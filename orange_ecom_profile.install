<?php

/**
 * @file
 * Install, update & uninstall functions for orange_ecom_profile.
 */

use Drupal\user\Entity\User;
use Drupal\user\RoleInterface;
use Drupal\node\Entity\Node;
use Drupal\menu_link_content\Entity\MenuLinkContent;
use Drupal\paragraphs\Entity\Paragraph;
use Drupal\taxonomy\Entity\Term;
use Drupal\commerce_store\Entity\Store;

/**
 * Implements hook_install().
 *
 * Perform actions to set up the site for this profile.
 *
 * @see system_install()
 */
function orange_ecom_profile_install() {
  // First, do everything in the standard profile.
  include_once DRUPAL_ROOT . '/core/profiles/standard/standard.install';
  standard_install();

  user_role_revoke_permissions(RoleInterface::ANONYMOUS_ID, ['access site-wide contact form']);
